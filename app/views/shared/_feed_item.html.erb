<tr>
  <td class="link">
    <span class="user">
      <%= link_to feed_item.owner.email, feed_item.owner %>
    </span>
    <span class="content"><%= feed_item.url %></span>
    <span class="token"><%= feed_item.token %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.owner) %>
  <td>
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => feed_item.url %>
  </td>
  <% end %>
</tr>
