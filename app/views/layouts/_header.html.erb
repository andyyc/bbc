<header>
  <div id="pageHeader" class="clearfix">
    <h1 id="pageLogo"><a href="<%= url_for root_path %>">Talksift</a></h1>
  <nav id="pageNav" class="rfloat">
    <ul>
      <% if signed_in? %>
      <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Sign in", 'auth/facebook'%></li>
      <% end %>
      <li><%= link_to "Home", root_path %></li>
      <% if signed_in? %>
      <li>(Signed in as <%= current_user.authorizations.first.nickname %>)</li>
      <% end %>

    </ul>
  </nav>
  </div>
</header>
